{
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "semi": 2,
      "quotes": ["error", "single", { "avoidEscape": true }],
      "indent": ["error", 2],
      "no-unused-vars": ["error", { "vars": "all", "args": "all", "ignoreRestSiblings": false, "argsIgnorePattern": "^_" }],
      "no-console": "error"
    },
    "env" : {
      "browser": true,
      "mocha": true,
      "es6": true,
      "node": true
    }
  }